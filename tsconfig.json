{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node",
    "module": "ESNext",
    "declaration": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": "./"
  },
  "include": ["src/**/*", "scripts/**/*", "dev/**/*", "docs/**/*", "components.d.ts"],
  "exclude": ["node_modules"]
}