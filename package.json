{
  "name": "@ckpack/v-ui",
  "version": "1.8.0",
  "description": "Quickly create a component library for Vue 3",
  "sideEffects": false,
  "type": "module",
  "main": "es/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "packageManager": "pnpm@7.10.0",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./dist/v-ui.cjs"
    },
    "./dist/*": "./dist/*",
    "./es": "./es/index.js",
    "./es/*": "./es/*",
    "./src": "./src/index.ts",
    "./src/*": "./src/*"
  },
  "repository": "https://github.com/ckpack/v-ui",
  "homepage": "https://ckpack.github.io/v-ui",
  "author": "ckvv",
  "license": "ISC",
  "keywords": [
    "vue",
    "v-ui",
    "vue-ui"
  ],
  "files": [
    "src/*",
    "es/*",
    "dist/*"
  ],
  "scripts": {
    "husky": "husky install",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.md --fix --ignore-path .gitignore",
    "release": "standard-version",
    "dev": "vite -c ./dev/vite.config.ts",
    "build": "npm run build:es && npm run build:dist",
    "build:es": "vite build  -c scripts/vite.es.ts",
    "build:dist": "vite build -c scripts/vite.dist.ts",
    "docs:dev": "cp CHANGELOG.md ./docs/ && vitepress dev docs",
    "docs:build": "cp CHANGELOG.md ./docs/ && vitepress build docs",
    "docs:serve": "cp CHANGELOG.md ./docs/ && vitepress serve docs",
    "gen": "tsx  ./scripts/gen.ts",
    "postgen": "tsx  ./scripts/gen-compoents.ts"
  },
  "devDependencies": {
    "@antfu/eslint-config": "0.27.0",
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@vitejs/plugin-vue": "^3.1.0",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.24.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "sass": "^1.55.0",
    "standard-version": "^9.5.0",
    "typescript": "^4.8.4",
    "unplugin-vue-define-options": "0.11.2",
    "vite": "^3.1.4",
    "tsx": "^3.9.0",
    "vite-plugin-dts": "1.6.4",
    "vitepress": "1.0.0-alpha.18",
    "vue": "^3.2.40"
  },
  "peerDependencies": {
    "vue": "^3.2.x"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,tsx,jsx,vue}": [
      "eslint --fix"
    ]
  }
}
