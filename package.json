{
  "name": "@ckpack/v-ui",
  "version": "1.3.0",
  "description": "Quickly create a component library for Vue 3",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "exports": {
    ".": {
      "import": "./es/index.js",
      "require": "./dist/index.cjs.js"
    },
    "./es/*": "./es/*",
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "repository": "https://github.com/ckpack/v-ui",
  "homepage": "https://ckpack.github.io/v-ui",
  "author": "ckvv",
  "license": "ISC",
  "keywords": [
    "vue",
    "v-ui",
    "vue-ui"
  ],
  "files": [
    "src/*",
    "es/*",
    "dist/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "eslint --fix --ext js,ts,mjs,cjs,tsx,jsx,vue ./",
    "release": "standard-version",
    "dev": "vite -c ./dev/vite.config.ts",
    "build": "npm run build:es && npm run build:dist && npm run build:style",
    "build:es": "node scripts/vite.es.mjs",
    "build:dist": "node scripts/vite.dist.mjs",
    "build:style": "sass --no-source-map --style=compressed ./src:es && sass --no-source-map --style=compressed ./src/styles/index.scss:dist/index.css",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs",
    "gen": "node ./scripts/gen.mjs",
    "postgen": "node ./scripts/gen-compoents.mjs"
  },
  "devDependencies": {
    "v-ui": "file:./",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-vue": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "sass": "^1.50.0",
    "standard-version": "^9.3.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.1",
    "@vitejs/plugin-vue": "^2.3.1",
    "vite-plugin-dts": "^1.0.5",
    "vitepress": "^0.22.3",
    "vue": "^3.2.31"
  },
  "dependencies": {},
  "peerDependencies": {
    "vue": "^3.2.x"
  },
  "engines": {
    "node": ">=16"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,tsx,jsx,vue}": [
      "eslint --fix"
    ]
  }
}
